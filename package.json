{
  "name": "ChatGPT",
  "version": "1.0.1",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --x64"
  },
  "build": {
    "win": {
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "ChatGPT"
    }
  },
  "repository": "https://github.com/x-canglong/ChatGPT",
  "keywords": [
    "Electron",
    "javascript",
    "start",
    "tutorial",
    "ChatGPT"
  ],
  "author": "Johnson",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^24.3.0",
    "electron-builder": "^23.6.0"
  }
}
